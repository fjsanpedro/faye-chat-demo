<div class="modal fade" id="user_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Create your user</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for :user, url: '#', html: { id: 'user-form' } do |f| %>
            <%= f.input :name, as: :string, required: false %>
            <label>Choose your color: </label>
            <input type="color" id="html5colorpicker" value="#ff0000" style="width:50%;">
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" id="save" data-dismiss="modal" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>
